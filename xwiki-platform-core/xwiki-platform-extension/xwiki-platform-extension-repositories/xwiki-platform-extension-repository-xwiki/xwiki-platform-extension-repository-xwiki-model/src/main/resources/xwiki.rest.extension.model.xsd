<schema xmlns="http://www.w3.org/2001/XMLSchema" targetNamespace="http://www.xwiki.org"
  xmlns:xwiki="http://www.xwiki.org" elementFormDefault="qualified">
    <complexType name="Extension">
    	<sequence>
    	    <element name="id" type="string" maxOccurs="1"
    	        minOccurs="1">
    	    </element>
    	    <element name="version" type="string" maxOccurs="1"
    	        minOccurs="1">
    	    </element>
    	    <element name="type" type="string" maxOccurs="1"
    	        minOccurs="1">
    	    </element>
    	    <element name="features" type="string" maxOccurs="unbounded" minOccurs="0"></element>
    	    <element name="name" type="string" maxOccurs="1"
    	        minOccurs="0">
    	    </element>
    	    <element name="description" type="string" maxOccurs="1"
    	        minOccurs="0">
    	    </element>
    	    <element name="website" type="string" maxOccurs="1"
    	        minOccurs="0">
    	    </element>
    	    <element name="authors" type="string" maxOccurs="unbounded"
    	        minOccurs="0">
    	    </element>
    	    <element name="dependencies"
    	        type="xwiki:ExtensionDependency" maxOccurs="unbounded"
    	        minOccurs="0">
    	    </element>
    	</sequence>
    </complexType>
    
    <complexType name="ExtensionDependency">
    	<sequence>
    		<element name="id" type="string" maxOccurs="1" minOccurs="1"></element>
    		<element name="version" type="string" maxOccurs="1" minOccurs="1"></element>
    	</sequence>
    </complexType>
    
    <element name="extension" type="xwiki:Extension"></element>

    <element name="extensions">
    <complexType>
      <sequence>
        <element name="extension" type="xwiki:Extension"
              minOccurs="0" maxOccurs="unbounded"></element>
      </sequence>
    </complexType>
  </element>
</schema>